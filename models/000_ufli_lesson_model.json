		"new_concept": {
			"title": "New Concept",
            "active": true,
			"introduction": {
				"title": "Introduction",
                "active": true,
				"content": [
					{
						"ufli_text": "This is the letter A. A is a vowel. You know the name of this letter already, \"a.\" This is the long vowel sound. Today we are going to read words with the short vowel sound. The short vowel A spells /a/ like in the beginning of the word apple.  The letter A can come in the middle of a word, such as the words cat and map. The letter A can also come at the beginning of a word, such as the words at and as."
					}
				]
				
			},
			"articulatory_gesture": {
				"title": "Articulatory Gesture",
                "active": true,
				"content": [
					{
						"ufli_text": "To make the short A /ă/ sound, open your mouth wide like this ... (model). Be sure your voice is on.  Like all vowels, /ă/ is a continuous sound that can be stretched out (use continuous hand motion).  Watch me /ă/. You try /ă/."						
					}
				]
			},
			"sound_wall": {
				"title": "Sound Wall",
                "active": true,
				"content": [
					{
						"ufli_text": "Add grapheme card 'a' to the vowel valley under the /ă/ picture card."
					}
				]
			},
			"letter_formation": {
				"title": "Letter Formation",
                "active": true,
				"content": [
					{
						"heading": "Review A",
						"ufli_text": "Start at the top. Slant down to the bottom (right to left). Hop back to the top. Slant down to the bottom the other way (left to right).  Hop to the middle. Straight line across the middle."
					},
					{
						"heading": "Introduce a",
						"ufli_text": "Begin at the middle line. Start at the top. Curve all the way around. Straight line down to the bottom."
					}
				]
			},
